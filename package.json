{
  "name": "Neon",
  "version": "0.0.6",
  "main": "./main.js",
  "description": "Light wallet for NEO blockchain",
  "homepage": "https://github.com/CityOfZion/neon-wallet",
  "author": "Ethan Fast <ejhfast@gmail.com> (https://github.com/Ejhfast)",
  "scripts": {
    "postinstall": "electron-builder install-app-deps && electron-rebuild --force --module_dir . -w node-hid -v 1.7.9",
    "start": "electron .",
    "start-dev": "electron . --enable-logging --remote-debugging-port=9222",
    "assets": "webpack --config ./config/webpack.config.prod",
    "assets-dev": "webpack --config ./config/webpack.config.dev",
    "assets-watch": "node_modules/.bin/webpack-dev-server --config ./config/webpack.config.dev  --port 3000 --host 0.0.0.0 --inline",
    "test": "yarn add electron@1.7.9 && jest --coverage && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "test:e2e": "ava __e2e__/*.e2e.js --timeout=120s",
    "test-watch": "jest --watch",
    "pack": "build --dir",
    "dist": "build",
    "lint": "eslint -c .eslintrc ./app --ext .js,.jsx --ignore-pattern dist/",
    "lint-fix": "eslint -c .eslintrc ./app --ext .js,.jsx --fix --ignore-pattern dist/",
    "prepush": "echo 'running flow...' && yarn flow && echo 'running lint...' && yarn lint && echo 'running tests...' && yarn test",
    "electron-rebuild": "electron-rebuild --force --module_dir . -w node-hid",
    "flow": "flow check"
  },
  "keywords": [],
  "license": "ISC",
  "build": {
    "appId": "com.electron.neon",
    "files": [
      "./main.js",
      "app/dist/index.html",
      "app/dist/bundle.js"
    ],
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    }
  },
  "dependencies": {
    "axios": "^0.16.2",
    "base-x": "^3.0.2",
    "bigi": "^1.4.2",
    "bs58check": "^2.0.2",
    "buffer": "^5.0.6",
    "classnames": "^2.2.5",
    "coveralls": "^3.0.0",
    "crypto-js": "^3.1.9-1",
    "ecurve": "^1.0.5",
    "electron-context-menu": "^0.9.1",
    "electron-json-storage": "^3.0.7",
    "electron-save-file": "^1.0.2",
    "elliptic": "^6.4.0",
    "enzyme-adapter-react-15": "^1.0.1",
    "file-loader": "^1.1.5",
    "fs": "0.0.1-security",
    "global": "^4.3.2",
    "isomorphic-fetch": "^2.2.1",
    "js-scrypt": "^0.2.0",
    "lodash": "^4.17.4",
    "neon-js": "git+https://github.com/CityOfZion/neon-js.git#8a52d07a4eda09afd1b57485deb6973409d0c342",
    "node-hid": "^0.5.7",
    "qrcode": "^0.8.2",
    "react": "^15.0.2",
    "react-ace": "^5.0.1",
    "react-data-grid": "^2.0.33",
    "react-dom": "^15.0.2",
    "react-hot-loader": "next",
    "react-icons": "^2.2.5",
    "react-redux": "^4.4.5",
    "react-router": "^2.4.0",
    "react-router-redux": "^4.0.4",
    "react-split-pane": "^0.1.65",
    "react-syntax-highlighter": "^5.1.3",
    "react-tooltip": "^3.3.0",
    "redux": "^3.5.2",
    "secure-random": "^1.1.1",
    "wif": "^2.0.6"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "ava": "^0.22.0",
    "axios-mock-adapter": "^1.9.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.8.0",
    "babel-eslint": "^8.0.1",
    "babel-loader": "^7.1.2",
    "babel-plugin-lodash": "^3.2.11",
    "babel-polyfill": "^6.8.0",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "css-loader": "^0.28.7",
    "electron": "1.7.9",
    "electron-builder": "^19.37.2",
    "electron-packager": "^8.6.0",
    "electron-rebuild": "^1.6.0",
    "enzyme": "^3.1.0",
    "enzyme-to-json": "^3.1.1",
    "eslint": "^4.8.0",
    "eslint-config-airbnb-base": "^12.0.2",
    "eslint-config-standard": "^10.2.1",
    "eslint-config-standard-react": "^5.0.0",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-flowtype": "^2.39.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jest": "^21.2.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-node": "^5.2.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-react": "^7.4.0",
    "eslint-plugin-standard": "^3.0.1",
    "extract-text-webpack-plugin": "^3.0.1",
    "flow-bin": "^0.56.0",
    "history": "^4.7.2",
    "html-webpack-plugin": "^2.30.1",
    "husky": "^0.14.3",
    "jest": "^20.0.4",
    "json-loader": "^0.5.7",
    "node-sass": "^3.7.0",
    "postcss-loader": "^2.0.7",
    "react-addons-test-utils": "^15.0.2",
    "react-test-renderer": "^15.6.1",
    "redux-devtools": "^3.2.0",
    "redux-devtools-dock-monitor": "^1.1.1",
    "redux-devtools-log-monitor": "^1.0.11",
    "redux-mock-store": "^1.2.3",
    "rimraf": "^2.5.2",
    "sass-loader": "^6.0.6",
    "spectron": "^3.7.2",
    "stats-webpack-plugin": "^0.6.1",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "webpack": "^3.7.1",
    "webpack-dev-server": "^2.9.1"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js"
    },
    "testPathIgnorePatterns": [
      "__tests__/setupTests.js"
    ],
    "unmockedModulePathPatterns": [
      "node_modules/react/",
      "node_modules/enzyme/"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/__tests__/setupTests.js"
  }
}
